# LLM Caller configuration
# Copy this file to .env and adjust values as needed.

# Network binding
LLM_CALLER_HOST=127.0.0.1
LLM_CALLER_PORT=4037

# Retry behaviour
LLM_CALLER_RETRY_ATTEMPTS=2

# Rate limiting (per client token). Set max to 0 to disable.
LLM_CALLER_RATE_LIMIT_MAX=5
LLM_CALLER_RATE_LIMIT_INTERVAL_MS=1000

# Logging configuration
# LLM_CALLER_LOG_LEVEL accepts error|warn|info|debug (defaults to info).
LLM_CALLER_LOG_LEVEL=info
# When set, logs are written to the given path in addition to stdout.
# LLM_CALLER_LOG_FILE=logs/llm-caller.log
# Rotate log file when size exceeds this value (bytes).
LLM_CALLER_LOG_MAX_BYTES=5242880
# Number of rotated files to keep (minimum 1).
LLM_CALLER_LOG_MAX_FILES=5
# Enable to bypass metadata redaction (not recommended outside local debugging).
LLM_CALLER_LOG_DEBUG_PAYLOADS=false

# Provider credentials (examples)
# OPENAI_API_KEY=replace_me
# ANTHROPIC_API_KEY=replace_me

# LM Studio assumes localhost:1234/v1 when configured in providers.json
